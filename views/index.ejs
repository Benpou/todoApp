<% include ../views/partials/header %>
    <form method="post" action="/todo/add">
        <div>
            <label>Todo name</label>
            <input type="text" name="text" placeholder="Add Todo">
        </div>
        <div>
            <label>Todo body</label>
            <textarea name="body" placeholder="Add body"></textarea>
        </div>
        <button type="submit">Submit</button>
    </form>

    Hello form index views

    <ul>
        <% todos.forEach(function(todo) { %>
            <li><%= todo.text %> - <%= todo.body %>
                <a data-id="<%= todo._id %>" href="#" class="delete-todo">Delete</a>
                <a href="/todo/edit/<%= todo._id %>" >Edit</a>

            </li>
        <% }) %>
    </ul>
